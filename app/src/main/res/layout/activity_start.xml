<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.umeta.prototype.StartActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/item_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_entry" />

        <Button
            android:id="@+id/item_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_check" />

        <Button
            android:id="@+id/item_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_search"/>

        <Button
            android:id="@+id/coordinate_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coordinate_input"/>

        <Button
            android:id="@+id/coordinate_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coordinate_check"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
